<h1>Listing leads</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Phone</th>
  </tr>

<% @salesforce_leads.each do |lead| %>
  <tr>
    <td><%=h lead.first_name %></td>
    <td><%=h lead.last_name %></td>
    <td><%=h lead.phone %></td>
    <td><%= link_to 'Show', lead %></td>
    <td><%= link_to 'Edit', edit_salesforce_lead_path(lead) %></td>
    <td><%= link_to 'Destroy', lead, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New lead', new_salesforce_lead_path %>